{
  "name": "TallyKit",
  "version": "0.4.4",
  "description": "Tally Connector for importing Bank Statements",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.1.3",
    "bootstrap": "^5.2.2",
    "date-fns": "^2.29.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^8.1.0",
    "react-redux": "^8.0.4",
    "react-scripts": "5.0.1",
    "react-table": "^7.8.0",
    "redux": "^4.2.0",
    "styled-components": "^5.3.6",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5",
    "xml2js": "^0.4.23"
  },
  "main": "public/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron .",

    "electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/electron/main.js",
    "electron:build:mw": "yarn build && electron-builder -mw -c.extraMetadata.main=build/electron/main.js",
    "electron:build:w": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron/main.js",
    "electron:build:all": "yarn build && electron-builder -mwl -c.extraMetadata.main=build/electron/main.js",

    "electron:release": "electron-builder -m -p onTagOrDraft -c.extraMetadata.main=build/electron/main.js",
    "electron:release:m": "electron-builder -m -p onTagOrDraft -c.extraMetadata.main=build/electron/main.js",
    "electron:release:w": "electron-builder -w -p onTagOrDraft -c.extraMetadata.main=build/electron/main.js",
    "electron:release:mw": "electron-builder -mw -p onTagOrDraft -c.extraMetadata.main=build/electron/main.js",
    "electron:release:all": "electron-builder -mwl -p onTagOrDraft -c.extraMetadata.main=build/electron/main.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron/universal": "^1.3.3",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "electron": "^21.2.1",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.2.2",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.glassball.tallykit",
    "productName": "TallyKit",
    "copyright": "Neeraj Gupta",

    "publish": {
      "provider": "github",
      "owner": "neeraj76",
      "repo": "tallypad"
    },
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "certificateFile": ".local/DeveloperIDCertificate.p12",
      "certificatePassword": "token@123",
      "verifyUpdateCodeSignature": false
    }
  },


  "build_worked": {
    "appId": "com.glassball.tallyconnect",
    "productName": "TallyPad",
    "copyright": "Neeraj Gupta",
    "afterSign": "build/electron/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "neeraj76",
      "repo": "tallypad"
    },
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "universal"
          ]
        }
      ]
    }
  }
}
